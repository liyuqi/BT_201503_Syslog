<p></p>

<% if (resp) { %>
<h3>搜尋結果</h3></br>
<% if (resp.length == 0) { %>
<h4> 查無資料!</h4>
<% } else /*if (resp.length < 20)*/{%>
<h4> 回傳 <%= resp.length %> 筆</h4>

<table class="table table-hover table-condensed">
    <caption></caption>
    <thead>
    <tr>
    <tr>
        <th>Timestamp</th>
        <th>Identifier</th>
        <th>Message</th>
        <th>_id</th>
    </tr>
    </thead>
    <tbody>
    <% resp.forEach( function(body){ %>
    <tr>
        <!--<td><%= body.level %></td>-->
        <% if(body.time) {
        if(body.time.toString().length > 12){ %>
        <td><%= body.time.toLocaleString() %></td>
        <% } else { %>
        <td><%= body.time.toLocaleString() %></td>
        <% } } %>
        <td><%= body.identifier %></td>
        <td><%= body.message %></td>
        <td><%= body._id %></td>
    </tr>
    <% }); %>
    </tbody>
</table>
<% } %>
<% } else { %>
<h3>總量 : <%= totalcount %>筆資料</h3>
<% } %>

</body>
</html>