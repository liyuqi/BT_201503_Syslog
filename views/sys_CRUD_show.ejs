<!DOCTYPE html>
<html>
<head>
    <title><%= title %></title>
</head>
<body id='bodyWrap'>

<fieldset>
    <legend>最新 log</legend>
</fieldset>
<!--<form class="form-horizontal" method="post">-->
    <!--<h3> 總量 : <%# totalcount %>筆資料-->
        <!--<button type="submit" class="btn btn-primary">show</button>-->
    <!--</h3>-->
<!--</form>-->

<!--<p></p>-->

<% if (resp) { %>
<!--<h3>顯示結果</h3><br/>-->
<% if (resp.length == 0) { %>
<h4>查無資料!</h4>
<% } else{ %>
<h3> 總量 : <%= totalcount %>筆資料,  顯示前 <%= resp.length %> 筆</h3>

<!--<h4> 回傳最新 <%= resp.length %> 筆</h4>-->

<table class="table table-hover table-condensed">
    <caption></caption>
    <thead>
    <tr>
    <tr>
        <td></td>
        <th>Timestamp</th>
        <th>device_name</th>
        <th>Identifier</th>
        <th>Facility來源</th>
        <th>sSeverity嚴重</th>
        <th>Mnemonic識別</th>
        <th>Message</th>
        <!--<th>_id</th>-->
    </tr>
    </thead>
    <tbody>
    <% var i=1; %>
    <% resp.forEach( function(body){ %>
    <tr>
        <td><%= i++ %></td>
        <% if(body.time) {
        if(body.time.toString().length > 12){ %>
        <td><%= body.time.toJSON().slice(0, 10)%> <%= body.time.toLocaleTimeString()%></td>
        <% } else { %>
        <td><%= body.time.toJSON().slice(0, 10)%> <%= body.time.toLocaleTimeString()%></td>
        <% } } %>
        <td><%= body.device_name %></td>
        <td><%= body.identifier %></td>
        <td><%= body.facility %></td>
        <td><%= body.severity %></td>
        <td><%= body.mnemonic %></td>
        <td><%= body.message %></td>
        <!--<td><%# body._id %></td>-->
    </tr>
    <% }); %>
    </tbody>
</table>
<% } %>
<% } else { %>

<% } %>

</body>
</html>