<% if (resp) { %>
<!--<h3>顯示結果</h3><br/>-->
<% if (resp.length == 0) { %>
<h4>查無資料!</h4>
<% } else{ %>
<h3> 總量 : <%= totalcount %>筆資料,  顯示 <%= (page - 1) * 10 +1 %>-<%= (page - 1) * 10 + resp.length %></h3>
<!--<div>-->
    <ul class="pagination">
        <% if (!isFirstPage) { %>
        <li class="prepage"><a href="?p=<%= page-1 %>"><i class="icon-chevron-left"></i>上頁 </a></li>
        <% } %>
        <% if (!isLastPage) { %>
        <li class="nextpage"><a href="?p=<%= page+1 %>"> 下頁<i class="icon-chevron-right"></i></a></li>
        <% } %>
    </ul>
<!--</div>-->
<!--<h4> 回傳最新 <%= resp.length %> 筆</h4>-->

<table class="table table-hover table-condensed">
    <caption></caption>
    <thead>
    <tr>
    <tr>
        <th>Timestamp</th>
        <th>Identifier</th>
        <th>Message</th>
        <!--<th>_id</th>-->
    </tr>
    </thead>
    <tbody>
    <% resp.forEach( function(body){ %>
    <tr>
        <% if(body.time) {
        if(body.time.toString().length > 12){ %>
        <td><%= body.time.toLocaleString() %></td>
        <% } else { %>
        <td><%= body.time.toLocaleString() %></td>
        <% } } %>
        <td><%= body.identifier %></td>
        <td><%= body.message %></td>
        <!--<td><%# body._id %></td>-->
    </tr>
    <% }); %>
    </tbody>
</table>
<% } %>
<% } else { %>

<% } %>

</body>
</html>